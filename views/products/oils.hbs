{{#extends 'base'}}

{{#block 'content'}}
<h2>Essential Oil</h2>
<a href="oils/create" class="btn btn-info btn-sm mt-3 mb-3">Add Stock</a>
<div>
    <ul>
    {{#each oil}}
        <li style="color:cadetblue">Name: {{this.name}}</li>
        <li>Description: {{this.description}}</li>
        {{#each sizes}}
        <li style="color:blueviolet"> Bottle Size: {{this.size}} ml</li>
        {{/each}}
        {{#each tags}}
        <li><b>Tags: {{this.name}}</b></li>
        {{/each}}
        
    {{/each}}
    </ul>
</div>


{{/block}}

{{/extends}}